<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".home.ui.contact.ContactFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_16sp"
        app:cardBackgroundColor="@color/purple_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padd_10"
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="@dimen/size_18dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vingcoz Technology Pvt Ltd."
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opposite Kunnamkulam Muncipality"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin : 680503"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thrissur, Kerala"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@vingcoz.com"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="http://www.vingcoz.com"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp"
                android:textAlignment="center"
                android:lines="2"
                android:layout_marginBottom="@dimen/padd_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginLeft="@dimen/size_15dp"
                android:layout_marginRight="@dimen/size_15dp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_marginRight="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_16sp"
        app:cardBackgroundColor="@color/purple_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padd_10"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_telephone"
                android:fontFamily="@font/amaranth"
                android:drawablePadding="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/padd_10"
                android:textSize="@dimen/size_18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_5dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_whatsapp"
                android:fontFamily="@font/amaranth"
                android:drawablePadding="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_5dp"
                android:textSize="@dimen/size_18dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>